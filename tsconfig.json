{
  "compilerOptions": {
    "module": "ES6",
    "declaration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": false,
    "outDir": "./@zws",
    "baseUrl": ".",
    "incremental": true,
    "moduleResolution": "nodenext",
    "paths": {
      "*": [
        "node_modules/*",
        "*"
      ]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "test", "**/*spec.ts"]
}